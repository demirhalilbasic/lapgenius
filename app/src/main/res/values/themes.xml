<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Osnovna svijetla tema aplikacije -->
    <style name="Theme.TechAnalysisApp3" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Toolbar i status bar boje -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Sekundarne boje -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Uklanjamo klasični ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Bijele ikone u Toolbar-u -->
        <item name="colorControlNormal">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>

        <!-- Koristimo prilagođeni SearchView stil -->
        <item name="searchViewStyle">@style/CustomSearchView</item>

        <!-- Onemogućavamo dark mode -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- Tema bez ActionBar-a -->
    <style name="Theme.TechAnalysisApp3.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- Tema za Splash Screen -->
    <style name="Theme.TechAnalysisApp3.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>