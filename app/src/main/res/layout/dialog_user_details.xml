<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_rounded_background"
    android:gravity="center_horizontal"
    android:clipToOutline="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivBrand"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_laptop_placeholder"
            android:layout_marginEnd="20dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pfp_placeholder"
                android:background="@drawable/profile_frame_background"/>

            <ImageView
                android:id="@+id/ivGender"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom|right"
                android:padding="6dp"
                android:src="@drawable/ic_male"
                android:background="@drawable/gender_circle_background"/>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"/>

    <TextView
        android:id="@+id/tvJoinDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/lilac"
        android:textSize="14sp"
        android:text="PridruÅ¾io se juli, 2025"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badgevi"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/badgesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:minHeight="90dp"
        android:layout_marginTop="8dp">

    </LinearLayout>

    <TextView
        android:id="@+id/tvAnalysisCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:text="40 analiza ukupno"/>

</LinearLayout>