<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gaming_pattern">

    <!-- Gaming pattern background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_gaming_pattern"
        android:scaleType="centerCrop"
        android:alpha="0.15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#E6FFFFFF">

        <!-- App Logo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/logo_text"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etSearchGame"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Pretraži igru..."
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            android:maxLines="1"
            android:backgroundTint="#40667BAB"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSearchGame"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traži"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGames"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

    </LinearLayout>
</RelativeLayout>