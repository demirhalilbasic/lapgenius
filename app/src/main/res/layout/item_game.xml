<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:padding="8dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/ivGame" android:layout_width="60dp"
        android:layout_height="60dp" android:scaleType="centerCrop"/>
    <TextView android:id="@+id/tvGameName" android:layout_marginStart="8dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="16sp"/>
</LinearLayout>