<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/compare_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="87dp"
    android:background="@drawable/gradient_background">

    <!-- Container za cijenu i status kredita -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/secondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCompareCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cijena poređenja: 3 kredita"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:gravity="center"/>

            <!-- Dodan red sa ikonicom i tekstom -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_coin"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvCreditStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Učitavam stanje..."
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Compare cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivLeftPreview"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_laptop_placeholder" />

                <TextView
                    android:id="@+id/tvLeftTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Odaberi laptop"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivRightPreview"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_laptop_placeholder" />

                <TextView
                    android:id="@+id/tvRightTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uporedi sa"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:paddingTop="12dp">

        <Button
            android:id="@+id/btnStartCompare"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Uporedi"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:enabled="false"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnResetCompare"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Resetuj"
            app:strokeColor="@color/secondary"
            app:strokeWidth="1dp"
            android:textColor="@color/secondary"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
