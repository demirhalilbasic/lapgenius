<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootContainer">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        android:background="@drawable/gradient_background">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <!-- Welcome Card with ID -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/secondary">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dobrodošao"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />
                <TextView
                    android:id="@+id/tvCreditsStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Status kredita"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:drawableStart="@drawable/ic_coin"
                    android:drawablePadding="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Centered Logo with ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logo_full_transp"
                android:contentDescription="@string/app_name"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartAnalysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Započni analizu"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginTop="24dp"
                app:cornerRadius="12dp"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>

        <!-- Hot Deals Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔥 Top modeli u trendu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp"/>

        <com.example.techanalysisapp3.ui.adapters.NonScrollableRecyclerView
            android:id="@+id/rvHotDeals"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!-- Favorite Brand Section -->
        <TextView
            android:id="@+id/tvFavoriteBrandLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <com.example.techanalysisapp3.ui.adapters.NonScrollableRecyclerView
            android:id="@+id/rvFavoriteBrand"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            android:paddingBottom="74dp"
            android:scrollbars="none"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>
</ScrollView>
</FrameLayout>